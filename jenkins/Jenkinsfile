node {
    def mavenContainer

    stage('Start Container') {
        mavenContainer = docker.image('maven:3.9.0').run('-v /root/.m2:/root/.m2')
    }

    stage('Build') {
        mavenContainer.inside {
            sh 'mvn -B -DskipTests clean package'
        }
    }

    stage('Test') {
        mavenContainer.inside {
            sh 'mvn test'
        }
        junit 'target/surefire-reports/*.xml'
    }

    stage('Deliver') {
        mavenContainer.inside {
            sh './jenkins/scripts/deliver.sh'
        }
    }

    stage('Cleanup') {
        sh 'docker stop ${mavenContainer.id} && docker rm ${mavenContainer.id}'
    }
}
